{
    "name": "dalpras/omnipay-nexi",
    "type": "library",
    "description": "Nexi driver for Omnipay payment processing library",
    "keywords": [
        "omnipay",
        "checkout",
        "creditcard",
        "payment",
        "nexi"
    ],
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Dal PrÃ ",
            "email": "stefano.dalpra@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "omnipay/common": "^3.1",
        "php-http/discovery": "^1.14",
        "php-http/guzzle7-adapter": "^1",
        "laminas/laminas-json": "^3.6"
    },
    "require-dev": {
        "omnipay/tests": "^3|^4",
        "phpunit/phpunit": "^9.5",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "autoload": {
        "psr-4": { "Omnipay\\OmnipayNexi\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Omnipay\\OmnipayNexi\\Tests\\": "tests/" }
    },    
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
